<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Telacadastro">

    <EditText
        android:id="@+id/apelidocad"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="188dp"
        android:background="@drawable/inputlogincad"
        android:fontFamily="@font/nunito_extrabold"
        android:hint="Apelido"
        android:inputType="text"
        android:paddingLeft="17dp"
        android:selectAllOnFocus="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/emailcad"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/inputlogincad"
        android:fontFamily="@font/nunito_extrabold"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:paddingLeft="17dp"
        android:selectAllOnFocus="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.906"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/apelidocad" />

    <EditText
        android:id="@+id/senhacad"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/inputlogincad"
        android:fontFamily="@font/nunito_extrabold"
        android:hint="Senha"
        android:inputType="textPassword"
        android:paddingLeft="17dp"
        android:selectAllOnFocus="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailcad" />

    <TextView
        android:id="@+id/labelemailcad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunito_extrabold"
        android:text="Seu Email"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/emailcad"
        app:layout_constraintStart_toStartOf="@+id/emailcad"
        app:layout_constraintTop_toBottomOf="@+id/apelidocad"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/labelapelidocad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunito_extrabold"
        android:text="Seu Apelido"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/apelidocad"
        app:layout_constraintStart_toStartOf="@+id/apelidocad" />

    <TextView
        android:id="@+id/labelsenhacad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunito_extrabold"
        android:text="Sua Senha"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/senhacad"
        app:layout_constraintStart_toStartOf="@+id/senhacad"
        app:layout_constraintTop_toBottomOf="@+id/emailcad"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/sfkcad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/nunito_extrabold"
        android:text="SafeSky "
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/logocad"
        android:layout_width="57dp"
        android:layout_height="69dp"
        app:layout_constraintBottom_toTopOf="@+id/labelapelidocad"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sfkcad"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/viagem" />

    <Button
        android:id="@+id/btcad"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/butlogincad"
        android:fontFamily="@font/nunito_extrabold"
        android:text="Cadastrar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/senhacad" />

    <Button
        android:id="@+id/btbacklogin"
        android:layout_width="200dp"
        android:layout_height="51dp"
        android:layout_marginBottom="132dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/nunito_extrabold"
        android:text="JÃ¡ tem um login? Clique Aqui!"
        android:textColor="#673AB7"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btcad"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btcad" />

</android.support.constraint.ConstraintLayout>