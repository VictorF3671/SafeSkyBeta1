<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu">

    <Button
        android:id="@+id/btnresp"
        android:layout_width="140dp"
        android:layout_height="132dp"
        android:layout_marginBottom="28dp"
        android:background="@drawable/questio"

        android:fontFamily="@font/nunito_extrabold"
        android:text="Exercicios de Respiração"
        app:layout_constraintBottom_toTopOf="@+id/View"
        app:layout_constraintStart_toStartOf="@+id/View" />

    <Button
        android:id="@+id/btndist"
        android:layout_width="140dp"
        android:layout_height="132dp"
        android:layout_marginBottom="28dp"
        android:background="@drawable/questio"

        android:fontFamily="@font/nunito_extrabold"
        android:text="Técnicas de Distração"
        app:layout_constraintBottom_toTopOf="@+id/View"
        app:layout_constraintEnd_toEndOf="@+id/View" />

    <View
        android:id="@+id/View"
        android:layout_width="324dp"
        android:layout_height="333dp"
        android:layout_marginTop="276dp"
        android:background="@drawable/questio"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="279dp"
        android:layout_height="68dp"
        android:fontFamily="@font/nunito_extrabold"
        android:text="Como você está se sentindo hoje?"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/View"
        app:layout_constraintEnd_toEndOf="@+id/View"
        app:layout_constraintHorizontal_bias="0.527"
        app:layout_constraintStart_toStartOf="@+id/View"
        app:layout_constraintTop_toTopOf="@+id/View"
        app:layout_constraintVertical_bias="0.086" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="290dp"
        android:layout_height="132dp"
        app:layout_constraintBottom_toBottomOf="@+id/View"
        app:layout_constraintEnd_toEndOf="@+id/View"
        app:layout_constraintStart_toStartOf="@+id/View"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.219">

        <RadioButton
            android:id="@+id/optcalmo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_extrabold"
            android:text="Calmo" />

        <RadioButton
            android:id="@+id/optansi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_extrabold"
            android:text="Ansioso" />

        <RadioButton
            android:id="@+id/optagit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_extrabold"
            android:text="Agitado" />

        <RadioButton
            android:id="@+id/optassus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_extrabold"
            android:text="Assustado" />

    </RadioGroup>

    <Button
        android:id="@+id/btsendques"
        android:layout_width="251dp"
        android:layout_height="52dp"
        android:backgroundTint="#41AFE0"
        android:fontFamily="@font/nunito_extrabold"
        android:text="Confirmar"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/View"
        app:layout_constraintEnd_toEndOf="@+id/View"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="@+id/View"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup"
        app:layout_constraintVertical_bias="0.486" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunito_extrabold"
        android:text="SafeSky"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/btnresp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.406"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.584" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="57dp"
        android:layout_height="69dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.588"
        app:srcCompat="@drawable/viagem" />

    <Button
        android:id="@+id/btncrise"
        android:layout_width="332dp"
        android:layout_height="49dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#FF5D5D"
        android:fontFamily="@font/nunito_extrabold"
        android:text="Crise de Pânico"
        android:textColor="#fff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/View"
        app:layout_constraintStart_toStartOf="@+id/View"
        app:layout_constraintTop_toBottomOf="@+id/View"
        app:layout_constraintVertical_bias="0.026" />
</android.support.constraint.ConstraintLayout>